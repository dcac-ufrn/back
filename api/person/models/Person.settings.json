{
  "connection": "default",
  "collectionName": "person",
  "info": {
    "name": "person",
    "description": "Pessoas com envolvimento acadêmico e/ou científico atual ou anterior no Departamento e/ou Programa de Pós-Graduação."
  },
  "options": {
    "timestamps": [
      "createdAt",
      "updatedAt"
    ]
  },
  "attributes": {
    "id_nome_completo": {
      "type": "string",
      "required": true
    },
    "id_prenome_extenso": {
      "required": true,
      "type": "string"
    },
    "id_prenome_abreviado": {
      "required": true,
      "type": "string"
    },
    "id_sobrenome": {
      "required": true,
      "type": "string"
    },
    "profile_lattes": {
      "type": "string"
    },
    "profile_orcid": {
      "type": "string"
    },
    "profile_scopus": {
      "type": "string"
    },
    "profile_publons": {
      "type": "string"
    },
    "profile_research_gate": {
      "type": "string"
    },
    "profile_linkedin": {
      "type": "string"
    },
    "formado_graduacao": {
      "required": true,
      "type": "boolean"
    },
    "formado_ppg_mestrado": {
      "required": true,
      "type": "boolean"
    },
    "formado_ppg_doutorado": {
      "required": true,
      "type": "boolean"
    },
    "docente_atual_depto": {
      "required": true,
      "type": "boolean"
    },
    "docente_vinculo_depto": {
      "required": true,
      "enum": [
        "sem_vinculo",
        "efetivo",
        "substituto",
        "temporario",
        "aposentado",
        "emerito"
      ],
      "type": "enumeration"
    },
    "docente_atual_ppg": {
      "required": true,
      "type": "boolean"
    },
    "docente_vinculo_ppg": {
      "required": true,
      "enum": [
        "sem_vinculo",
        "permanente",
        "colaborador"
      ],
      "type": "enumeration"
    },
    "docente_univ_page": {
      "type": "string"
    },
    "docente_funcao_adm": {
      "enum": [
        "sem_funcao",
        "chefe_departamento",
        "vice_chefe_departamento",
        "coordenador_graduacao",
        "vice_coordenador_graduacao",
        "coordenador_pos_graduacao",
        "vice_coordenador_pos_graduacao",
        "funcao_outro_orgao_univ"
      ],
      "type": "enumeration"
    },
    "docente_ex_temporario_depto": {
      "required": true,
      "type": "boolean"
    },
    "docente_ex_substituto_depto": {
      "required": true,
      "type": "boolean"
    },
    "docente_ex_efetivo_depto": {
      "required": true,
      "type": "boolean"
    },
    "docente_ex_colaborador_ppg": {
      "required": true,
      "type": "boolean"
    },
    "docente_ex_permanente_ppg": {
      "required": true,
      "type": "boolean"
    },
    "docente_ou_pesq_email": {
      "type": "email"
    },
    "docente_ou_pesq_maior_titulacao": {
      "enum": [
        "nao_informado",
        "graduacao",
        "mestrado",
        "doutorado"
      ],
      "type": "enumeration"
    },
    "docente_ou_pesq_edificio_trab": {
      "type": "string"
    },
    "docente_ou_pesq_sala": {
      "type": "string"
    },
    "pesq_ppg_atual": {
      "required": true,
      "type": "boolean"
    },
    "pesq_ppg_anterior": {
      "required": true,
      "type": "boolean"
    },
    "docente_ou_pesq_avatar": {
      "model": "avatar"
    }
  }
}